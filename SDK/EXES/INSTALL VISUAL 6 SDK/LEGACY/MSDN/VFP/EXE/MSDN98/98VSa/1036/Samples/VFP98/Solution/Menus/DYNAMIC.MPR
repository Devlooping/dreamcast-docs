DEFINE PAD dynmenu OF _MSYSMENU PROMPT "\<Éléments dynamiques" COLOR SCHEME 3 ;
	AFTER _MSYSTEM ;
	KEY ALT+É, ""
ON PAD dynmenu OF _MSYSMENU ACTIVATE POPUP empty_pop

DEFINE POPUP empty_pop MARGIN RELATIVE SHADOW COLOR SCHEME 4
DEFINE BAR 1 OF empty_pop PROMPT " "

ON SELECTION POPUP empty_pop DO takeaction IN dynamic.mpr WITH PROMPT()

