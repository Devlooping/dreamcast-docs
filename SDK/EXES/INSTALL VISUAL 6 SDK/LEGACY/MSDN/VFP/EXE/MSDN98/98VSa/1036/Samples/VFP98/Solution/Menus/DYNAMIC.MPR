PROCEDURE takeaction(cPrompt)
#DEFINE MSG_LOC "Vous avez choisi " + cPrompt + "."
		
IF cPrompt = "Supprimer ce menu"
	RELEASE PAD dynmenu of _MSYSMENU
ELSE
	WAIT WINDOW MSG_LOC TIMEOUT 1
ENDIF

